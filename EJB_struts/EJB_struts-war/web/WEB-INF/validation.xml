<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE form-validation PUBLIC
          "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1.3//EN"
          "http://jakarta.apache.org/commons/dtds/validator_1_1_3.dtd">

<form-validation>

<!--
     This is a minimal Validator form file with a couple of examples.
-->

    <global>
    </global>

    <formset>

        <!-- An example form -->
        <form name="logonForm">
            <field property="username" depends="required">
                    <arg key="logonForm.username"/>
            </field>
            <field property="password" depends="required,mask">
                    <arg key="logonForm.password"/>
                    <var>
                        <var-name>mask</var-name>
                        <var-value>^[0-9a-zA-Z]*$</var-value>
                    </var>
            </field>
        </form>
        <!-- An benxe form-->
        <form name="BenXeForm">
            <field
                property="tenBenXe"
                depends="required">
                    <arg key="BenXeForm.tenBenXe"/>
            </field>
        </form>
        
        
        <!-- An themvexe form-->
        <form name="VeXeForm">
            <field property="hoten" depends="required">
                    <arg key="VeXeForm.hoten"/>
            </field>
            <field property="dienthoai" depends="required,mask">
                    <arg key="VeXeForm.dienthoai"/>
                    <var>
                        <var-name>mask</var-name>
                        <var-value>^[0-9]*$</var-value>
                    </var>
            </field>
            <field property="danhsachghe" depends="required">
                    <arg key="VeXeForm.danhsachghe"/>
            </field>
        </form>
        
        <!-- Tuyen xe form-->
        <form name="TuyenXeForm">
            <field property="thoigiandi" depends="required, integer">
                <arg key="TuyenXeForm.thoigiandi"/>
            </field>
            <field property="dongia" depends="required, integer">
                <arg key="TuyenXeForm.dongia"/>
            </field>
        </form>
    </formset>
</form-validation>
